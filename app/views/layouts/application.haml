!!!
%html
  %head
    %title
      mySport #{ yield(:title).present? ? "- #{yield(:title)}" : "" }
    = google_font_link_tag("Lato:400,700")
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body{ :class => controller_name.dasherize + "-controller" }
    
    = render :template => "layouts/top_navigation"
    - if user_signed_in?
      = render :template => "layouts/sub_navigation"
      = render :template => "layouts/notifications"
      = render :template => "layouts/title_navigation"
      .main-content-intern
        = yield
      = render :template => "layouts/footer"
    - else
      .main-content-extern
        = yield
      = render :template => "layouts/footer"
