- title t('account.title.edit')

.row
  .column.grid-12   
    = form_for @user, :url => account_path, :html => {:multipart => true} do |f|
      %h2.headline
        = t('account.headlines.profil')
      = f.label :email
      = f.text_field :email
      = f.label :first_name
      = f.text_field :first_name
      = f.label :last_name
      = f.text_field :last_name
      = f.label :avatar
      = f.file_field :avatar
      
      %h2.headline
        = t('account.headlines.groups')
      = f.fields_for :groups do |ff|
        = ff.text_field :title
      
      = f.submit t('account.submit')
