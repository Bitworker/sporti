- title t('account.title.edit')

= form_for @user, :url => account_path, :html => {:multipart => true} do |f|
  = f.label :email
  = f.text_field :email
  = f.label :first_name
  = f.text_field :first_name
  = f.label :last_name
  = f.text_field :last_name
  = f.label :avatar
  = f.file_field :avatar
  = f.submit t('account.information.submit')
