%h2
  Bearbeiten #{resource_name.to_s.humanize}
= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f|
  = devise_error_messages!
  %div
    = f.label :email, "E-Mail"
    %br
    = f.email_field :email, :autofocus => true
  - if devise_mapping.confirmable? && resource.pending_reconfirmation?
    %div
      Warte aktuell auf Bestätigung von: #{resource.unconfirmed_email}
  %div
    = f.label :password, "Passwort"
    %i (Bitte leer lassen falls nichts geändert werden soll)
    %br
    = f.password_field :password, :autocomplete => "off"
  %div
    = f.label :password_confirmation, "Passwort bestätigen"
    %br
    = f.password_field :password_confirmation
  %div
    = f.label :current_password, "Aktuelles Passwort"
    %i (Wir brauchen dein aktuelles Passwort um die Änderungen bestätigen zu können)
    %br
    = f.password_field :current_password
  %div= f.submit "Speichern"
%h3 Konto löschen
%p
  Unglücklich? #{button_to "Mein Konto löschen", registration_path(resource_name), :data => { :confirm => "Bist du sicher?" }, :method => :delete}.
= link_to "Zurück", :back
